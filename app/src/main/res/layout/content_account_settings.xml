<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_account_settings"
        tools:context=".AccountSettings">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="185dp"
            app:srcCompat="@drawable/dc_snow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY"/>

    <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#0000FF"
            android:textFontWeight="bold"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:clickable="false" tools:layout_editor_absoluteY="390dp"/>

    <ImageView
            android:layout_width="179dp"
            android:layout_height="138dp" app:srcCompat="@drawable/family"
            android:id="@+id/imageView2" android:scaleType="fitXY" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent" android:clickable="false"/>
    <TextView
            android:id="@+id/postReplyBox"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:textSize="25sp"
            android:textColor="#03A9F4"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            tools:hint="Please post above"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/postButton"

    />

    <EditText
            android:id="@+id/postBox"
            android:layout_width="0dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="44dp"
            android:textSize="20sp"
            android:textColor="#03A9F4"
            android:hint="Please write post here"
            app:layout_constraintTop_toBottomOf="@+id/welcomeMessage"/>

    <Button
            android:text="Post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postButton"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/postBox"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/nameBox"
            android:text="Iain McQuade"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#0000FF"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <ImageView
            android:id="@+id/edit"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:src="@drawable/icons8_edit_24"
            app:layout_constraintTop_toBottomOf="@id/nameBox"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/photoLink" android:layout_marginTop="20dp"/>
    <ImageView
            android:id="@+id/photoLink"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            app:srcCompat="@drawable/icons8_camera_24"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nameBox"
            app:layout_constraintStart_toEndOf="@+id/edit"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/homeLink"/>
    <ImageView
            android:id="@+id/homeLink"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            app:srcCompat="@drawable/icons8_home_24"
            app:layout_constraintTop_toBottomOf="@+id/nameBox"
            app:layout_constraintStart_toEndOf="@+id/photoLink"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/settingsLink" android:layout_marginTop="20dp"/>
    <ImageView
            android:id="@+id/settingsLink"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            app:srcCompat="@drawable/icons8_settings_24"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nameBox"
            app:layout_constraintStart_toEndOf="@+id/homeLink"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    
    <android.support.v7.widget.RecyclerView android:layout_width=""
                                            android:layout_height=""></android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>